<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.and1ss.onlinechat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".OnlineChatApp"
        android:allowBackup="true"
        android:icon="@mipmap/launcher_logo_48dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_logo_48dp"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.launcher.LauncherActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".view.auth.AuthenticationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.main.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main" />


    </application>

</manifest>